{
	"name": "bitloops-rest",
	"version": "0.2.0",
	"description": "REST API Bridge to Bitloops",
	"main": "server.js",
	"scripts": {
		"build-push": "sh ./deploy/build-push-image.sh -t 0.0.13",
		"aws-deploy-dev": "sh ./deploy/aws-deploy.sh -t 0.0.13 -p values.dev.yaml -c bitloops-dev  -r eu-central-1 -f bitloops-rest-0.0.13.tgz -u admin:admin",
		"aws-deploy-prod": "sh ./deploy/aws-deploy.sh -t 0.0.13 -p values.prod.yaml -c bitloops -r eu-central-1 -f bitloops-rest-0.0.13.tgz -u admin:admin",
		"build": "rimraf ./dist && mkdir ./dist && tsc && yarn copy-files",
		"copy-files": "cp -R ./src/public ./dist",
		"start": "node dist/server.js",
		"start:dev": "./node_modules/.bin/env-cmd -f .env.dev nodemon --config nodemon.json src/server.ts",
		"start:dev:docker": "./node_modules/.bin/env-cmd -f .env.dev.docker nodemon --config nodemon.json src/server.ts",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"author": "Bitloops S.A.",
	"license": "SEE LICENSE IN LICENSE.md",
	"dependencies": {
		"axios": "^0.26.0",
		"base64url": "^3.0.1",
		"crypto": "^1.0.1",
		"fastify": "^3.22.0",
		"fastify-cookie": "^5.5.0",
		"fastify-formbody": "^5.1.0",
		"fastify-static": "^4.5.0",
		"firebase-admin": "^9.12.0",
		"http": "^0.0.1-security",
		"ioredis": "^4.28.3",
		"jwt-decode": "^3.1.2",
		"mongodb": "^4.3.1",
		"msgpackr": "^1.5.2",
		"nats": "^2.2.0",
		"qs": "^6.10.3",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/ioredis": "^4.28.7",
		"@types/jest": "^27.0.2",
		"@types/node": "^17.0.18",
		"@typescript-eslint/eslint-plugin": "^5.10.0",
		"@typescript-eslint/parser": "^5.10.0",
		"env-cmd": "^10.1.0",
		"escodegen": "^2.0.0",
		"eslint": "^8.0.0",
		"eslint-config-airbnb-typescript": "^16.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"nodemon": "^2.0.13",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"ts-node": "^10.2.1",
		"typescript": "^4.4.3",
		"uglify-js": "^3.14.2"
	}
}
